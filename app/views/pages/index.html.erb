<!DOCTYPE html>
<html lang="en">
  <head>
    
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/apple-touch-icon-57-precomposed.png">


  </head>

  <body>


    <div class="container">

		<div id="bl-main" class="bl-main">
			
			<!--=========== ABOUT SECTION ===========-->
				<section>
					<div class="bl-box">
						<h2 >John Ramster</h2> <!-- class="bl-icon bl-icon-about" -->
					</div><!-- /bl-box -->
					<div class="bl-content">
						<div class="row-fluid">
							<div class="col-xs-12">
								<h2>About John</h2>
								<br />
								<%= @about.content.html_safe %>
							</div><!-- /span12 -->
						</div><!-- /row-fluid -->
						
					</div><!-- /bl-content -->
					<span class="bl-icon bl-icon-close"></span>
				</section>
				
				
				
			<!--=========== LATEST NEWS SECTION ===========-->
				<section id="bl-work-section">
					<div class="bl-box">
						<h2 >News & Latest Productions</h2> <!-- class="bl-icon bl-icon-works"-->
					</div>
					<div class="bl-content">

						<div class="row-fluid">
							<div class="col-xs-6">
							<h2>News</h2>
							<br />
							<br />
							<% @diaries.each do |diary| %>
								<ul id="bl-work-items" style="list-style: none;">
									<li data-panel="panel-<%= diary.id %>">
									<%= diary.date.to_s(:long) %>, <h4><%= diary.title %></h4><br/>
										<%= diary.content.html_safe %></li>
								</ul>
								<% end %>						
							</div><!-- /span4 -->
							<div class="col-xs-6">
								<h2>Latest Production</h2>
								<ul id="bl-work-items" style = "list-style: none;">
									<li data-panel="panel-<%= @latest_project.id %>"><%= link_to image_tag @latest_project.feature_image, :class => 'img-responsive' %></li>
								</ul>
								<p><%= @latest_project.title %></p>					
							</div><!-- /span4 -->

						</div><!-- /row-fluid -->
					</div><!-- /bl-content -->
					<span class="bl-icon bl-icon-close"></span>
				</section>
				
				
				
			<!--=========== PROJECT PORTFOLIO SECTION ===========-->
				<section>
					<div class="bl-box">
						<h2>Portfolio Gallery</h2>
					</div>
					<div class="bl-content">
						<h2>Past Projects</h2>
						<br />
						<% @projects.each do |project| %>
						<div class="row-fluid">
							<div class="col-xs-4">
								<ul id="bl-work-items" style="list-style: none;">
									<li data-panel="panel-<%= project.id %>"><%= link_to image_tag project.feature_image, :class => 'img-responsive' %></li>
								</ul>
								<p><%= project.title %></p>							
							</div><!-- /span4 -->
							
						</div><!-- /row-fluid -->
						<% end %>
					</div><!-- /bl-content -->
					<span class="bl-icon bl-icon-close"></span> -->
				</section>
				
				
				
			<!--=========== CONTACT SECTION ===========-->
				<section>
					<div class="bl-box">
						<h2 >Contact Me</h2>
					</div>
					<div class="bl-content">
						<div class="row-fluid">
							<div class="col-xs-12">
								<h2>Get in touch</h2>
								<br>
								<p>You can contact me and send me your questions and inquiries.</p>								
							
							<p>
								<p>your@email.com | +34 600669933 | Madrid, Spain</p>
							</p>
							
							<p>
								<a href="#" class="social-network facebook"></a>
								<a href="#" class="social-network pinterest"></a>
								<a href="#" class="social-network flickr"></a>
								<a href="#" class="social-network dribbble"></a>
								<a href="#" class="social-network twitter"></a>
								<a href="#" class="social-network apple"></a>
								<a href="#" class="social-network skype"></a>
								<a href="#" class="social-network tumblr"></a>
								<a href="#" class="social-network vimeo"></a>
							</p>
							
						</div>
					</div>
					<span class="bl-icon bl-icon-close"></span>
				</section>
				
				
				
				
			<!--=========== PROJECTS DESCRIPTIONS SECTION ===========-->
				<div class="bl-panel-items" id="bl-panel-work-items">
					<% @projects.each do |project| %>
						<div data-panel="panel-<%= project.id %>">
							<div class="row-fluid">
								<div class="co-xs-10 col-md-10 col-xs-offset-1 tweak">
									<%= image_tag project.feature_image, :class => "img-responsive" %>
									<br>
									<br>
									<h3><%= project.title %></h3>
									<h4>Project Overview</h4>
									<%= project.details.html_safe %>
									<br>
									<% project.photos.each do |photo| %>
									<div class = 'col-xs-6 col-md-3' %>
									<%= image_tag photo.picture_url(:thumb).to_s, :class => 'thumbnail' %>
									</div>
								<% end %>

								</div><!-- /span8 -->


							</div><!-- /row-fluid -->	
						</div><!-- /panel1 -->
					<% end %>
					
					<nav>
						<span class="bl-next-work">&gt; Next Project</span>
						<span class="bl-icon bl-icon-close"></span>
					</nav>
				</div><!-- /panel-items -->
				
				
			</div><!-- /bl-main -->

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    	<script type="text/javascript" src="/assets/boxlayout.js"></script>
    	<script>
			$(function() {
				Boxlayout.init();
			});
		</script>
  </body>
</html>
