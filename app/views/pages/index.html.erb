								</ul>
								<p>Rake's Progress</p>							
							</div><!-- /span4 -->

						</div><!-- /row-fluid -->
					</div><!-- /bl-content -->
					<span class="bl-icon bl-icon-close"></span>
				</section>
				
				
				
			<!--=========== PROJECT PORTFOLIO SECTION ===========-->
				<section>
					<div class="bl-box">
						<h2>Portfolio Gallery</h2>
					</div>
					<div class="bl-content">
						<h2>Past Projects</h2>
						<br />
						<% @projects.each do |project| %>
						<div class="row-fluid">
							<div class="col-xs-4">
								<ul id="bl-work-items" style="list-style: none;">
									<li data-panel="panel-1"><%= link_to image_tag project.feature_image, :class => 'img-responsive' %></li>
								</ul>
								<p><%= project.title %></p>							
							</div><!-- /span4 -->
							
						</div><!-- /row-fluid -->
						<% end %>
					</div><!-- /bl-content -->
					<span class="bl-icon bl-icon-close"></span> -->
				</section>
				
				
				
			<!--=========== CONTACT SECTION ===========-->
				<section>
					<div class="bl-box">
						<h2 >Contact Me</h2>
					</div>
					<div class="bl-content">
						<div class="row-fluid">
							<div class="span12">
								<h2>Get in touch</h2>
								<br>
								<p>I am available for freelance jobs. Please contact me and send me your questions and inquiries.</p>								
							
							<p>
								<p>your@email.com | +34 600669933 | Madrid, Spain</p>
