					<div class="bl-content">

						<div class="row-fluid">
							<div class="col-xs-6">
							<h2>News</h2>
							<br />
							<br />
							<% @diaries.each do |diary| %>
								<ul id="bl-work-items" style="list-style: none;">
									<li data-panel="panel-1">
									<%= diary.date.to_s(:long) %>, <h4><%= diary.title %></h4><br/>
