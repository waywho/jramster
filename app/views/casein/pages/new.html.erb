<h2>Add a new page</h2>

<%= form_for @page, :url => casein_pages_path do |f| %>
	
	<%= render :partial => 'casein/pages/form', :locals => { :f => f } %>
		<%= f.fields_for :photos do |builder| %>
		<%= render 'casein/photos/photo_fields', f: builder %>
		<% end %>

	<p class="submits">
		<%= link_to 'Cancel', casein_pages_path, :class => 'btn btn-mini btn-danger' %>
