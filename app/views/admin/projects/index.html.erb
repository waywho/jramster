<div class = 'col-xs-offset-2 col-xs-8'>
	<h1>Projects</h1>
	<%= link_to new_admin_project_path, :class => 'btn btn-success' do %>
	<span class = 'glyphicon glyphicon-plus'></span>
	Add a new project
	<% end %>
	<br />
	<br />
	<table class = 'table'>
		<tr>
			<th>Project Title</th>
			<th>Last Update</th>
			<th>Actions</th>
		</tr>
		<% @projects.each do |project| %>
		<tr>
			<td><%= project.title %></td>
			<td><%= project.updated_at.to_s(:short) %></td>
			<td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
		</tr>
		<% end %>

	</table>
</div>
