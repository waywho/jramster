<div class = 'col-xs-offset-2 col-xs-8'>
	<h1>Update Project Details</h1>
	<div class = 'col-xs-12'>
	<%= simple_form_for @project, :url => admin_project_path do |f| %>
	<%= f.button :submit, :class => 'btn btn-success pull-right' %>
	<br />
	<%= f.input :title %>

	<%= f.input :overview, input_html: {:id => 'eg-basic', :class => 'boo text-small'} %>
	<%= f.input :details, input_html: {:id => 'eg-basic', :class => 'boo text-small'} %>

	<% end %>

	</div>
	<br />
	<div class = 'col-xs-12'>
		<h3>Current Feature Image</h3>
		<!-- Button trigger modal -->
		<button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#myModal">
		  Set Feature Image from Gallery
		</button>
		<div class = 'row'>
			<div class = 'col-xs-6 col-md-6'>
			<%= image_tag @project.feature_image, :class => 'thumbnail img-responsive' %>
			</div>
		</div>
	</div>
	<br />
	<br />
	<div class = 'col-xs-12'>
	    <%= link_to 'Add Photos to Project Gallery', edit_multiple_admin_photos_path, :class => 'btn btn-success pull-right' %>
		<h3>Project Gallery</h3>
		<% @project.photos.each do |photo| %>
		<div class = 'col-xs-6 col-md-3' %>
		<%= image_tag photo.picture_url(:thumb).to_s, :class => 'thumbnail' %>
		</div>
		<% end %>
	</div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Select photo for Feature Image</h4>
      </div>
      <%= simple_form_for @project, :url => admin_project_path do |f| %>
      <div class="modal-body">
      	<br />
		<b>Select from the Project Gallery</b>
		Click a photo to select...
		<div class = 'row'>
		<% @project.photos.each do |photo| %>
			<div class = 'col-xs-6 col-md-4 container'>
				<%= radio_button_tag 'project[feature_image]', photo.picture, false, :class => 'rbutton' %>
				<%= image_tag photo.picture_url(:thumb).to_s, :class => 'thumbnail image-select' %>
			</div>
			<% end %>
		</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Set', :class => 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){

	$(function() {
	    $('.boo').editable({
	      inlineMode: false
	    })
  	});

  })
</script>

<script>
$(function () {
	$(".container .rbutton").hide();
	$('.image-select').click(function() {
		var $radioBtn = $(this).parent().find('.rbutton');
		$radioBtn.prop('checked', !$radioBtn.prop('checked'));
		$('.rbutton:not(:checked)').parent().find('.image-select').removeClass('selected');
		$('.rbutton:checked').parent().find('.image-select').addClass('selected');
	});
})
</script>