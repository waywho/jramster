<div class = 'col-xs-offset-2 col-xs-8'>
	<h1>Pages</h1>
	<%= link_to new_admin_page_path, :class => 'btn btn-success' do %>
	<span class = 'glyphicon glyphicon-plus'></span>
	Add a new page
	<% end %>
	<br />
	<br />
	<table class = 'table'>
		<tr>
			<th>Page Title</th>
			<th>Last Update</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.title %></td>
			<td><%= page.updated_at.to_s(:short) %></td>
			<td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
		</tr>
		<% end %>

	</table>
</div>
