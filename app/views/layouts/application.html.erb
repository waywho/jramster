<!DOCTYPE html>
<html>
<head>
  <title>John Ramster</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="John Ramster Website">
  <meta name="author" content="WeiHsi Hu">
</head>
<body>
  <% if params[:controller] == 'admin/pages' || 'admin/projects' %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to admin_pages_path, :class => 'navbar-brand' do %>
          JRamster CMS
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li <%= 'class = active' if params[:controller] == 'admin/pages' %> ><%= link_to 'Pages', admin_pages_path %><span class="sr-only">(current)</span></li>
            <li <%= 'class = active' if params[:controller] == 'admin/projects' %> ><%= link_to 'Projects', admin_projects_path %><span class="sr-only">(current)</span></li>

            <li><a href="#">Link</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Link</a></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  <% end %>
	<% if notice.present? %>
         <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
         <p class="alert alert-danger"><%= alert %></p>
  <% end %>

<%= yield %>

</body>
</html>
